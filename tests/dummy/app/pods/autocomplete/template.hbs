<div class="dummy-body select">
  <div class="section-header">frost-autocomplete</div>

  <div class="section-title">Content</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">data</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='mySelect'
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='mySelect'
}}
```"}}
      </div>
    </div>
  </div>

  <div class="section-title">Selection</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">autofocus</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='mySelect'
          _autofocus=true
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='mySelect'
  _autofocus=true
}}
```"}}
      </div>
    </div>

    <div class="example">
      <div class="title">placeholder</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='mySelect'
          placeholder='Superheroes'
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='mySelect'
  placeholder='Superheroes'
}}
```"}}
      </div>
    </div>

    <div class="example">
      <div class="title">selectedValue</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='mySelect'
          label='superhero'
          selectedValue=preSelectedValue
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='mySelect'
  label='superhero'
  selectedValue=preSelectedValue
}}
```"}}
      </div>
    </div>

    <div class="example">
      <div class="title">width</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='mySelect'
          label='superhero'
          width=width
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='mySelect'
  label='superhero'
  width=width
}}
```"}}
      </div>
    </div>
  </div>

  <div class="section-title">State</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">error</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='mySelect'
          label='superhero'
          error=true
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='mySelect'
  label='superhero'
  error=true
}}
```"}}
      </div>
    </div>

    <div class="example">
      <div class="title">disabled</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='mySelect'
          label='superhero'
          selectedValue=preSelectedValue
          disabled=true
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='mySelect'
  label='superhero'
  selectedValue=preSelectedValue
  disabled=true
}}
```"}}
      </div>
    </div>
  </div>

  <div class="section-title">Events</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">onChange - local filtering</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='mySelect'
          label='superhero'
          onChange=(action 'onChangeHandler')
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='mySelect'
  label='superhero'
  onChange=(action 'onChangeHandler')
}}
```"}}
      </div>
    </div>

  </div>

  <div class="section-title">Other</div>
  <hr>
  <div class="section">
    <div class='example'>
      <div class='title'>Spread</div>
      <div class='demo'>
        {{! BEGIN-SNIPPET autocomplete-other-spread }}
        {{frost-autocomplete
          options=(hash
            data=data
            hook='mySelect'
            label='superhero'
            selected=selectedIndex
            error=true
          )
        }}
        {{! END-SNIPPET }}
      </div>
      <div class='snippet'>
        {{code-snippet name='autocomplete-other-spread.hbs'}}
      </div>
    </div>
    <div class='example'>
      <div class='title'>wrapLabels</div>
      <div class='demo'>
        {{! BEGIN-SNIPPET autocomplete-other-wrap-labels }}
        {{frost-autocomplete
          data=data
          hook='myMultiSelect'
          wrapLabels=true
        }}
        {{! END-SNIPPET }}
      </div>
      <div class='snippet'>
        {{code-snippet name='autocomplete-other-wrap-labels.hbs'}}
      </div>
    </div>
    <div class='example'>
      <div class='title'>filterType - startsWith is the default</div>
      <div class='demo'>
        {{! BEGIN-SNIPPET autocomplete-filter-type }}
        {{frost-autocomplete
          data=data
          hook='myMultiSelect'
          filterType='contains'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class='snippet'>
        {{code-snippet name='autocomplete-filter-type.hbs'}}
      </div>
    </div>
  </div>
</div>
