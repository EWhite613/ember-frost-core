<div class="dummy-body select">
  <div class="section-header">frost-autocomplete</div>

  <div class="section-title">Content</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">data</div>
      <div class="demo">
        {{! BEGIN-SNIPPET autocomplete }}
        {{frost-autocomplete
          data=data
          hook='myAutoComplete'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='autocomplete.hbs'}}
      </div>
    </div>
  </div>

  <div class="section-title">Selection</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">autofocus</div>
      <div class="demo">
        {{! BEGIN-SNIPPET autocomplete-autofocus }}
        {{frost-autocomplete
          data=data
          hook='myAutoComplete'
          _autofocus=true
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='autocomplete-autofocus.hbs'}}
      </div>
    </div>

    <div class="example">
      <div class="title">placeholder</div>
      <div class="demo">
        {{! BEGIN-SNIPPET autocomplete-placeholder }}
        {{frost-autocomplete
          data=data
          hook='myAutoComplete'
          placeholder='Superheroes'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='autocomplete-placeholder.hbs'}}
      </div>
    </div>

    <div class="example">
      <div class="title">selectedValue</div>
      <div class="demo">
        {{! BEGIN-SNIPPET autocomplete-selectedvalue }}
        {{frost-autocomplete
          data=data
          hook='myAutoComplete'
          label='superhero'
          selectedValue=preSelectedValue
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='autocomplete-selectedvalue.hbs'}}
      </div>
    </div>

    <div class="example">
      <div class="title">selected</div>
      <div class="demo">
        {{! BEGIN-SNIPPET autocomplete-selected }}
        {{frost-autocomplete
          data=data
          hook='myAutoComplete'
          label='superhero'
          selected=3
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='autocomplete-selected.hbs'}}
      </div>
    </div>

    <div class="example">
      <div class="title">width</div>
      <div class="demo">
        {{! BEGIN-SNIPPET autocomplete-width }}
        {{frost-autocomplete
          data=data
          hook='myAutoComplete'
          label='superhero'
          width=width
        }}
        {{! END-SNIPPET }}
      </div>
      <div class="snippet">
        {{code-snippet name='autocomplete-width.hbs'}}
      </div>
    </div>
  </div>

  <div class="section-title">State</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">error</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='myAutoComplete'
          label='superhero'
          error=true
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='myAutoComplete'
  label='superhero'
  error=true
}}
```"}}
      </div>
    </div>

    <div class="example">
      <div class="title">disabled</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='myAutoComplete'
          label='superhero'
          selectedValue=preSelectedValue
          disabled=true
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='myAutoComplete'
  label='superhero'
  selectedValue=preSelectedValue
  disabled=true
}}
```"}}
      </div>
    </div>
  </div>

  <div class="section-title">Events</div>
  <hr>
  <div class="section">
    <div class="example">
      <div class="title">onChange - local filtering</div>
      <div class="demo">
        {{frost-autocomplete
          data=data
          hook='myAutoComplete'
          label='superhero'
          onChange=(action 'onChangeHandler')
        }}
      </div>
      <div class="snippet">
        {{format-markdown "```handlebars
{{frost-autocomplete
  data=data
  hook='myAutoComplete'
  label='superhero'
  onChange=(action 'onChangeHandler')
}}
```"}}
      </div>
    </div>

  </div>

  <div class="section-title">Other</div>
  <hr>
  <div class="section">
    <div class='example'>
      <div class='title'>Spread</div>
      <div class='demo'>
        {{! BEGIN-SNIPPET autocomplete-other-spread }}
        {{frost-autocomplete
          options=(hash
            data=data
            hook='myAutoComplete'
            label='superhero'
            error=true
          )
        }}
        {{! END-SNIPPET }}
      </div>
      <div class='snippet'>
        {{code-snippet name='autocomplete-other-spread.hbs'}}
      </div>
    </div>
    <div class='example'>
      <div class='title'>wrapLabels - type m</div>
      <div class='demo'>
        {{! BEGIN-SNIPPET autocomplete-other-wrap-labels }}
        {{frost-autocomplete
          data=data
          hook='myMultiSelect'
          wrapLabels=true
        }}
        {{! END-SNIPPET }}
      </div>
      <div class='snippet'>
        {{code-snippet name='autocomplete-other-wrap-labels.hbs'}}
      </div>
    </div>
    <div class='example'>
      <div class='title'>filterType - startsWith is the default</div>
      <div class='demo'>
        {{! BEGIN-SNIPPET autocomplete-filter-type }}
        {{frost-autocomplete
          data=data
          hook='myMultiSelect'
          filterType='contains'
        }}
        {{! END-SNIPPET }}
      </div>
      <div class='snippet'>
        {{code-snippet name='autocomplete-filter-type.hbs'}}
      </div>
    </div>

    <div class='example'>
      <div class='title'>isLoading</div>
      <div class='demo'>
        {{! BEGIN-SNIPPET autocomplete-is-loading }}
        {{frost-autocomplete
          data=data
          hook='myMultiSelect'
          isLoading=true
        }}
        {{! END-SNIPPET }}
      </div>
      <div class='snippet'>
        {{code-snippet name='autocomplete-is-loading.hbs'}}
      </div>
    </div>
  </div>
</div>
